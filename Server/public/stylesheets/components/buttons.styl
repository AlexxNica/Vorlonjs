//- Buttons

.btn
  margin: 10px 0
  display: inline-block
  border-radius: 3px
  font-weight: $font-weight-bold
  text-align: center
  cursor: pointer

  &.btn-primary
    padding: 8px 10px
    background: $teal
    color: white

    &:hover
      background: darken($teal, 10%)

  &.btn-secondary
    padding: 8px 10px
    background: $grey-med
    color: $grey-drk

    &:hover
      background: darken($grey-med, 10%)